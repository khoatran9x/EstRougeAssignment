<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/city_layer_height"
            android:paddingStart="@dimen/text_common_padding"
            android:paddingEnd="@dimen/text_common_padding"
            android:gravity="center_vertical|start"
            android:maxLines="2"
            android:textSize="@dimen/city_text_size"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/country_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/country_layer_height"
            android:paddingStart="@dimen/text_common_padding"
            android:paddingEnd="@dimen/text_common_padding"
            android:gravity="center_vertical|start"
            android:maxLines="2"
            android:textSize="@dimen/country_text_size"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <TextView
        android:id="@+id/population_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:layout_weight="4"
        android:paddingStart="@dimen/text_common_padding"
        android:paddingEnd="@dimen/text_common_padding"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="@dimen/popular_textsize"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

</LinearLayout>